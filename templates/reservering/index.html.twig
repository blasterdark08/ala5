{% extends 'base.html.twig' %}

{% block title %}Reservering index{% endblock %}

{% block body %}
    <h1>Reservering index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Opmerking</th>
                <th>Start</th>
                <th>Eind</th>
                <th>Betaald</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservering in reserverings %}
            <tr>
                <td>{{ reservering.id }}</td>
                <td>{{ reservering.opmerking }}</td>
                <td>{{ reservering.start ? reservering.start|date('Y-m-d') : '' }}</td>
                <td>{{ reservering.eind ? reservering.eind|date('Y-m-d') : '' }}</td>
                <td>{{ reservering.betaald ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('reservering_show', {'id': reservering.id}) }}">show</a>
                    <a href="{{ path('reservering_edit', {'id': reservering.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('reservering_index') }}">Alles</a>
    <a class="btn btn-primary" href="{{ path('reservering_checkin') }}">Check in</a>
    <a class="btn btn-primary" href="{{ path('reservering_checkout') }}">Check Out</a>
<br><br>
    <a class="btn btn-success" href="{{ path('reservering_new') }}">Create new</a>
{% endblock %}
